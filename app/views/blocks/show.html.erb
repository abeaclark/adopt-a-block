<p id="notice"><%= notice %></p>

<h1>
  Block num:
  <%= @block.block_num %>
</h1>

<h4>
  <strong>Name:</strong>
  <%= @block.name %>
</h4>
<hr>
<div class="row">
  <h2>Team Members</h2>
  <div class="col-sm-6 col-md-4 col-lg-4">
    <% @users.each do |user| %>
    <div class="thumbnail">
      <img src="<%= user.avatar_url %>" class="avatar">
      <div class="caption">
        <h3>Name: <%= user.full_name %></h3>
        <p><a href="/users/<%= user.id %>" class="btn btn-primary" role="button">View Profile</a>
        </div>
      </div>
    <% end %>
    <a href="#" class="btn btn-success margin_bottom" role="button">Join Team</a>
  </div>
</div>

<hr>
<div class="row">
  <div>
  <h2>Business Sponsors</h2>

  </div>
  <div class="col-sm-6 col-md-4">
    <% @businesses.each do |business| %>
    <div class="thumbnail">
      <div class="caption">
        <h3><%= business.name %></h3>
        <p><%= business.website %></p>
        <p><a href="/business/<%= business.id %>" class="btn btn-primary" role="button">View Business</a>
        </div>
      </div>
    <% end %>
    <a href="#" class="btn btn-success margin_bottom" role="button">Become a Sponsor</a>
  </div>
</div>


<hr>
<div class="row">
  <h2>Issues</h2>

  <div class="col-sm-6 col-md-4">
    <% @issues.each do |issue| %>
    <div class="thumbnail">

      <div class="caption">
        <h3><%= issue.title %></h3>
        <p><%= issue.body %></p>
        <p>Status: <%= issue.status %></p>
        <p><a href="/issues/<%= issue.id %>" class="btn btn-primary" role="button">View Issue</a>
        </div>
      </div>
    <% end %>
    <a href="#" class="btn btn-success margin_bottom" role="button">Submit and issue</a>
  </div>
</div>

<hr>

<div class="row">
  <h2>Events</h2>
  <div class="col-sm-6 col-md-4">
    <% @events.each do |event| %>
    <div class="thumbnail">

      <div class="caption">
        <h3><%= event.title %></h3>
        <p><%= event.body %></p>
        <p><a href="/events/<%= event.id %>" class="btn btn-primary" role="button">View Event</a>
        </div>
      </div>
    <% end %>
    <a href="#" class="btn btn-success margin_bottom" role="button">Propose and Event</a>
  </div>
</div>






